<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bajas de Alumnos"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etClaveProductoBaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Clave del producto"
        android:inputType="text"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAgregarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Alumno"
        android:layout_marginTop="20dp"
        android:background="#D32F2F"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvCanasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claves"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvProductosCanasta"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:text="Lista de bajas" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dar de baja"
        android:layout_marginTop="20dp"
        android:background="#D32F2F"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_marginTop="20dp"
        android:background="#FF9800"
        android:textColor="#FFFFFF" />

</LinearLayout>
